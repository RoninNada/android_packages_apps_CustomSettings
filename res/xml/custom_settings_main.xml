<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/custom_settings_title">

    <PreferenceScreen
        android:key="custom_statusbar_settings"
        android:icon="@drawable/ic_custom_statusbar"
        android:title="@string/statusbar_title"
        android:fragment="com.custom.settings.fragments.StatusBar" />

    <PreferenceScreen
        android:key="custom_quick_settings"
        android:icon="@drawable/ic_custom_quicksettings"
        android:title="@string/quicksettings_title"
        android:fragment="com.custom.settings.fragments.QuickSettings" />

    <PreferenceScreen
        android:key="custom_notifications_settings"
        android:icon="@drawable/ic_custom_notifications"
        android:title="@string/notifications_title"
        android:fragment="com.custom.settings.fragments.Notifications" />

    <PreferenceScreen
        android:key="custom_navigation_settings"
        android:icon="@drawable/ic_custom_navbar"
        android:title="@string/navbar_title"
        android:fragment="com.custom.settings.fragments.NavBar" />

    <PreferenceScreen
        android:key="custom_button_settings"
        android:icon="@drawable/ic_custom_button"
        android:title="@string/button_title"
        android:fragment="com.custom.settings.fragments.Buttons" />

    <PreferenceScreen
        android:key="custom_lockscreen_settings"
        android:icon="@drawable/ic_custom_lockscreen"
        android:title="@string/lockscreen_title"
        android:fragment="com.custom.settings.fragments.LockScreen" />
                                
    <PreferenceScreen
        android:key="custom_ui_settings"
        android:icon="@drawable/ic_custom_ui"
        android:title="@string/ui_title"
        android:fragment="com.custom.settings.fragments.UserInterface" />

    <PreferenceScreen
        android:key="custom_recents_settings"
        android:icon="@drawable/ic_custom_recents"
        android:title="@string/recents_title"
        android:fragment="com.custom.settings.fragments.Recents" />

    <PreferenceScreen
        android:key="custom_sound_settings"
        android:icon="@drawable/ic_settings_sound"
        android:title="@string/sound_title"
        android:fragment="com.custom.settings.fragments.Sound" />

    <PreferenceScreen
        android:key="custom_misc_settings"
        android:icon="@drawable/ic_custom_misc"
        android:title="@string/misc_title"
        android:fragment="com.custom.settings.fragments.Miscellaneous" />

</PreferenceScreen>
